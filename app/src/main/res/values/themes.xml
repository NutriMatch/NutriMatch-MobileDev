<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NutriMatch" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Color -->
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_600</item>
        <item name="colorPrimaryVariant">@color/test</item>
        <item name="colorOnPrimary">@color/test</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/test</item>
        <item name="colorOnSecondary">@color/test</item>

        <!-- Error brand color. -->
        <item name="colorError">@color/red_400</item>
        <item name="colorOnError">@color/red_400</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_600</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MdcTypographyStyles.Headline1
        </item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MdcTypographyStyles.Headline2
        </item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MdcTypographyStyles.Headline3
        </item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MdcTypographyStyles.Headline4
        </item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MdcTypographyStyles.Headline5
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MdcTypographyStyles.Headline6
        </item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MdcTypographyStyles.Subtitle1
        </item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MdcTypographyStyles.Subtitle2
        </item>
        <item name="textAppearanceBody1">@style/TextAppearance.MdcTypographyStyles.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MdcTypographyStyles.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MdcTypographyStyles.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MdcTypographyStyles.Overline</item>



        <!-- Shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.NutriMatch.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.NutriMatch.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.NutriMatch.LargeComponent
        </item>

        <item name="popupMenuBackground">@drawable/shape_radius_5</item>
        <item name="android:popupMenuStyle">@style/popupMenuBackground</item>
    </style>

    <style name="popupMenuBackground" parent="Widget.MaterialComponents.PopupMenu">
        <item name="android:popupBackground">@drawable/shape_radius_5</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Custom Input -->
    <style name="LayoutTextFieldOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/open_sans</item>
        <item name="hintTextColor">@color/gray_300</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/gray_300</item>
    </style>
    <style name="TextFieldOutline" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChipComponent" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="android:checkableBehavior">single</item>
    </style>

    <style name="Theme.NutriMatch.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="Theme.NutriMatch.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.NutriMatch" parent="Base.Theme.NutriMatch" />
</resources>